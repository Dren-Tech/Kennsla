{
    "compilerOptions": {
        "incremental": true,
        "baseUrl": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "esnext", "dom"
        ],
        "module": "commonjs",
        "outDir": "build",
        "resolveJsonModule": true,
        "strict": true,
        "target": "es2019"
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "./build"
    ]
}